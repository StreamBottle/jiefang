.contrlcenter {
    position: absolute;
    top: 0;
    left: 0;
    width: 570px;
    height: 340px;
    background: url('./images/contrlcenter.png') no-repeat;
    background-size: 100%;
    .oilMeterPointer {
        position: absolute;
        top: 122px;
        left: 366px;
        width: 50px;
        height: 50px;
        background: url('./images/pointer.png') no-repeat;
        background-size: 100%;
        transform: rotate(15deg);
        transform-origin: center center;
    }
    .on {
        position: absolute;
        top: 283px;
        left: 283px;
        width: 30px;
        height: 12px;
        background: red;
        cursor: pointer;
    }
}