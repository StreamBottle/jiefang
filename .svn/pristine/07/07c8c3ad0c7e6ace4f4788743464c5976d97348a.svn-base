<div style="width:100%;height:100%;position:fixed;top: 0;left:0; margin:auto;z-index:9000; background: rgba(0,0,0,0.5);"
  id="overspread" *ngIf="!handleErrorService.errorPopupHidden">
  <div class="handle-error-body">
    <div id="error_close" style="position: absolute; width: 30px;
    height: 25px; cursor: pointer; right: 0; top: 0;" (click)="closeErrorPopup()"></div>
    <div style="position: absolute; margin: 7px 10px;text-align: center;line-height:10px;">
      <div *ngFor=" let errorMessage of handleErrorService.errorMessages">{{errorMessage.message}}</div>
    </div>
    <div id="error_ensure" style="position: absolute;
    right: 0;
    bottom: 0;
    width: 50px;
    height: 25px;
    cursor: pointer;" (click)="closeErrorPopup()"></div>
  </div>
</div>
